@model ProjectsSoftuni.Services.Models.Projects.ProjectsIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Projects</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">Name</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["OwnerSortParm"]">Owner</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StatusSortParm"]">Status</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model.Projects)
        {
        <tr>
            <td>
                @project.Name
            </td>
            <td>
                @project.Owner
            </td>
            <td>
                @project.Status
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "Projects", new { id = project.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
