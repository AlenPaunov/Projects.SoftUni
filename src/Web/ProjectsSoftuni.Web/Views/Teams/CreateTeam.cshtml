@model ProjectsSoftuni.Web.ViewModels.Teams.CreateTeamInputModel

@{
    ViewData["Title"] = "CreateTeam";
    var projectId = (string)ViewData["ProjectId"];
}

<h1>CreateTeam</h1>

<h4>CreateTeamInputModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ApplyingForProject" asp-controller="Applications">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
