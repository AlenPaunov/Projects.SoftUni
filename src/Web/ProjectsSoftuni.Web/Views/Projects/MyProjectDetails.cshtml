@model ProjectsSoftuni.Web.ViewModels.Projects.MyProjectDetailsViewModel

@{
    ViewData["Title"] = "My Project Details";
    var specificationUrl = (string)ViewData["SpecificationUrl"];
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectStatusName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectStatusName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectOwner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectOwner)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectDueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectDueDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectDeployLink)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectDeployLink)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectBudget)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectBudget)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="MyProjects" asp-controller="Users">Back to List</a> |
    @if (specificationUrl != null)
    {
        <a href="@specificationUrl">Project Specifications</a>
    }

    @*TODO: add validation for Team Lead*@
    @if (this.User.IsInRole("Administrator"))
    {
        @Html.ActionLink("Add Member", "AddMember", "Teams", new {teamId = Model.Team.Id, projectId = Model.ProjectId })
    }
</div>

<!-- Section: Team v.1 -->
<section class="team-section text-center my-5">
    <!-- Section heading -->
    <h2 class="h1-responsive font-weight-bold my-5">Our team</h2>
    <!-- Section description -->
    @*<p class="grey-text w-responsive mx-auto mb-5"></p>*@

    <div>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Team.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Team.Name)
            </dd>
        </dl>
    </div>

    <!-- Grid row -->
    <div class="row">
        @foreach (var member in Model.Team.Members)
        {
            <!-- Grid column -->
            <div class="col-lg-3 col-md-6 mb-lg-0 mb-5">
                <div class="avatar mx-auto">
                    <img src="" class="rounded-circle z-depth-1"
                         alt="Sample avatar">
                </div>
                <h5 class="font-weight-bold mt-4 mb-3">@member.Username</h5>
                <p class="text-uppercase blue-text"><strong>@member.TeamRole</strong></p>
                @*<p class="grey-text"></p>*@
                <ul class="list-unstyled mb-0">
                    <!-- Facebook -->
                    <a class="p-2 fa-lg fb-ic">
                        <i class="fab fa-facebook-f blue-text"> </i>
                    </a>
                    <!-- Twitter -->
                    <a class="p-2 fa-lg tw-ic">
                        <i class="fab fa-twitter blue-text"> </i>
                    </a>
                    <!-- Instagram -->
                    <a class="p-2 fa-lg ins-ic">
                        <i class="fab fa-instagram blue-text"> </i>
                    </a>
                </ul>
            </div>
            <!-- Grid column -->
        }
    </div>
    <!-- Grid row -->

</section>