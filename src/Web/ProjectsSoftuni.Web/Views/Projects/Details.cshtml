</div>
<div>
    <a asp-action="Index">Back to List</a> |
    @if (applyProjectEnabled && !isRejectedProject)
    {
        @Html.ActionLink("Apply for the project", "ApplyForProject", new { projectId = Model.Id })
    }
</div>
